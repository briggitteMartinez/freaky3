-- database: ../db/products.db

-- Create the products table
CREATE TABLE IF NOT EXISTS products (
    id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    slug TEXT NOT NULL UNIQUE,
    description TEXT,
    sku TEXT NOT NULL UNIQUE,
    img_url TEXT,
    price REAL NOT NULL,
    brand TEXT NOT NULL
);

